<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>

<div class="col-sm-6 col-sm-offset-3" id="forgot-password">
  <h3><%= Spree.t(:forgot_password) %></h3>

  <p><%= Spree.t(:instructions_to_reset_password) %></p>

  <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
    <div class="form-group">
      <%= f.label :email, Spree.t(:email), :class => 'sr-only' %>
      <%= f.email_field :email, :placeholder => Spree.t(:email), :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit Spree.t(:reset_password), :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>