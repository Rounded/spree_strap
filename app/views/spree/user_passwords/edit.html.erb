<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<h3><%= Spree.t(:change_my_password) %></h3>

<%= form_for @spree_user, :as => :spree_user, :url => spree.update_password_path, :method => :put do |f| %>
  <div class="form-group">
    <%= f.label :password, Spree.t(:password), :class => 'sr-only' %>
    <%= f.password_field :password, :placeholder => Spree.t(:password), :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, Spree.t(:confirm_password), :class => 'sr-only' %>
    <%= f.password_field :password_confirmation, :placeholder => Spree.t(:confirm_password), :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :reset_password_token %>
    <%= f.submit Spree.t(:update), :class => 'btn btn-primary' %>
  </div>
<% end %>