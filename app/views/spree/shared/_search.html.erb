<% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Spree::Taxon.roots %>
<%= form_tag spree.products_path, :method => :get, :class => 'navbar-form navbar-left', :role => 'search' do %>
  <div class="form-group">
    <%= select_tag :taxon,
          options_for_select([[Spree.t(:all_departments), '']] +
                                @taxons.map {|t| [t.name, t.id]},
                                @taxon ? @taxon.id : params[:taxon]), 'aria-label' => 'Taxon' %>
    <%= search_field_tag :keywords, params[:keywords], :placeholder => Spree.t(:search), :html => {:class => 'form-control' } %>
  </div>
  <%= submit_tag Spree.t(:search), :name => nil, :class => 'btn btn-default' %>
<% end %>