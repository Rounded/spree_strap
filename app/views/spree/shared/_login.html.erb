<%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path, :class => 'form-horizontal' do |f| %>
  <div id="password-credentials">
    <div class="form-group">
      <%= f.label :email, Spree.t(:email), :class => 'sr-only' %>
      <%= f.email_field :email, :placeholder => Spree.t(:email), :class => 'form-control', :tabindex => 1 %>
    </div>
    <div class="form-group">
      <%= f.label :password, Spree.t(:password), :class => 'sr-only' %>
      <%= f.password_field :password, :placeholder => Spree.t(:password), :class => 'form-control', :tabindex => 2 %>
    </div>

  </div>
  <div class="checkbox">
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      <%= Spree.t(:remember_me) %>
    <% end %>
  </div>
  <div class="field-group">
    <%= f.submit Spree.t(:login), :class => 'btn btn-primary', :tabindex => 3 %>
  </div>
<% end %>