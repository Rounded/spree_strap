<div id="taxonomies" class="" data-hook>
  <% get_taxonomies.each do |taxonomy| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= Spree.t(:shop_by_taxonomy, :taxonomy => taxonomy.name) %></h3>
      </div>
      <%= taxons_tree(taxonomy.root, @taxon, Spree::Config[:max_level_in_taxons_menu] || 1) %>

    </div>
  <% end %>
</div>