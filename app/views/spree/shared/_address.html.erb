<address>
  <strong><%= address.full_name %></strong><br>
  <% unless address.company.blank? %>
    <%= address.company %><br>
  <% end %>
  <%= address.address1 %><br>
  <% unless address.address2.blank? %>
    <%= address.address2 %><br>
  <% end %>
  <%= address.city %>, <%= address.state_text %> <%= address.zipcode %><br>
  <%= address.country.try(:name) %><br>

  <% unless address.phone.blank? %>
    <%= Spree.t(:phone) %>: <%= address.phone %><br>
  <% end %>
  <% unless address.alternative_phone.blank? %>
    <%= Spree.t(:alternative_phone) %>: <%= address.alternative_phone %>
  <% end %>
</address>