<% if !@product.taxons.blank? %>
  <div id="taxon-crumbs" data-hook class="col-sm-6">
    <h3 class="product-section-title"><%= Spree.t(:look_for_similar_items) %></h3>

    <div data-hook="product_taxons">
      <ul id="similar_items_by_taxon" class="list-unstyled" data-hook>
      <% @product.taxons.each do |taxon| %>
        <li><%= link_to taxon.name, seo_url(taxon) %></li>
      <% end %>
      </ul>
    </div>

  </div>
<% end %>